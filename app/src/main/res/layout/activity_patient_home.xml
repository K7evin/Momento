<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".patient.patientHome">

    <ImageButton
        android:id="@+id/patientProfile1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:adjustViewBounds="true"
        android:maxWidth="130sp"
        android:maxHeight="130sp"
        android:scaleType="centerCrop"
        android:layout_marginStart="45dp"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageButton
        android:id="@+id/patientProfile2"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="45dp"

        android:adjustViewBounds="true"
        android:maxWidth="130sp"
        android:maxHeight="130sp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/patientProfile3"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/patientProfile1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/patientProfile4"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/patientProfile2"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/patientProfile5"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile3"
        app:layout_constraintStart_toStartOf="@+id/patientProfile3" />

    <ImageButton
        android:id="@+id/patientProfile6"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_marginBottom="120dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/patientProfile5"
        app:layout_constraintStart_toStartOf="@+id/patientProfile4" />

    <TextView
        android:id="@+id/patientHomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textSize="30sp"
        android:text= "@string/Choose_a_Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/patientName1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile1"
        app:layout_constraintStart_toStartOf="@+id/patientProfile1"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile1" />

    <TextView
        android:id="@+id/patientName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile2"
        app:layout_constraintStart_toStartOf="@+id/patientProfile2"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile2" />
    <TextView
        android:id="@+id/patientName3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile3"
        app:layout_constraintStart_toStartOf="@+id/patientProfile3"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile3" />
    <TextView
        android:id="@+id/patientName4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile4"
        app:layout_constraintStart_toStartOf="@+id/patientProfile4"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile4" />
    <TextView
        android:id="@+id/patientName5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile5"
        app:layout_constraintStart_toStartOf="@+id/patientProfile5"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile5" />
    <TextView
        android:id="@+id/patientName6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/patientProfile6"
        app:layout_constraintStart_toStartOf="@+id/patientProfile6"
        app:layout_constraintTop_toBottomOf="@+id/patientProfile6" />

    <!--    <androidx.constraintlayout.widget.Barrier-->
